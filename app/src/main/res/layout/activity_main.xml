<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="top|center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/resultText"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elije el movimiento"
            android:textSize="15dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/rockButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Piedra"
            android:background="@color/piedra"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:drawableBottom="@mipmap/ic_piedra_foreground"/>

        <Button
            android:id="@+id/paperButton"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Papel"
            android:drawableBottom="@mipmap/ic_papel2_foreground"
            android:textSize="15dp" />

        <Button
            android:id="@+id/scissorsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tijeras"
            android:textColor="@color/black"
            android:drawableBottom="@mipmap/ic_tijeras_foreground"
            android:textSize="15dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
